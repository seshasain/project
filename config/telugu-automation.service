[Unit]
Description=Telugu Serial Automation Service
After=network.target

[Service]
Type=simple
User=telugu-automation
Group=telugu-automation
WorkingDirectory=/opt/telugu-automation
Environment=PYTHONPATH=/opt/telugu-automation
ExecStart=/opt/telugu-automation/venv/bin/python src/run.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=yes
ProtectSystem=full
ProtectHome=read-only
PrivateTmp=yes
PrivateDevices=yes

[Install]
WantedBy=multi-user.target 