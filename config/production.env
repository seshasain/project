# YouTube API Configuration
YOUTUBE_CLIENT_SECRETS_FILE=client_secrets.json
YOUTUBE_TOKEN_FILE=token.pickle
YOUTUBE_UPLOAD_PRIVACY=public
YOUTUBE_MADE_FOR_KIDS=false

# Video Settings
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720
VIDEO_FPS=30
VIDEO_CRF=20
VIDEO_PRESET=medium
VIDEO_CHUNK_DURATION=120
VIDEO_MAX_CHUNKS=5

# Audio Settings
AUDIO_BITRATE=192k

# Paths
DATA_DIR=data
LOGS_DIR=logs
THUMBNAILS_DIR=tn
BACKGROUND_IMAGE=bg.jpg

# Scheduler Settings
CHECK_INTERVAL_MINUTES=10
MAX_RETRIES=3

# Cleanup Settings
CLEANUP_INTERVAL_HOURS=6
MAX_FILE_AGE_DAYS=7
MIN_FREE_SPACE_GB=10

# Health Check Settings
HEALTH_CHECK_MINUTES=5
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=80
MAX_DISK_PERCENT=90
MAX_OPEN_FILES=1000

# Health Report Settings
HEALTH_REPORT_HOURS=24
HEALTH_REPORT_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5 